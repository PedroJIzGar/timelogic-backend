server:
  port: 8080

auth:
  internal:
    enabled: true
    issuer: timelogic-gw
    audience: timelogic-services
    ttl-seconds: 600
    secret: "CHANGE_ME_min_32_chars"

cors:
  allowed-origins: "http://localhost:3000,http://localhost:4200"
  allowed-methods: "GET,POST,PUT,DELETE,OPTIONS"
  allowed-headers: "*"
  exposed-headers: "X-User-Id,X-User-Email,X-User-Name,X-User-Roles"
  allow-credentials: true
